package br.edu.senai.modelo;

public class Pessoa extends Quadrilatero 
{
	private String nome;
	private Ambiente amb1;
	private int posX, posY;
	
	
	/**
	 * 
	 */
	public Pessoa() 
	{
		super();
	}

	/**
	 * @param tamanhoX
	 * @param tamanhoY
	 * @param nome
	 * @param amb1
	 * @param posX
	 * @param posY
	 */
	public Pessoa(int tamanhoX, int tamanhoY, String nome, Ambiente amb1, int posX, int posY) 
	{
		super(tamanhoX, tamanhoY);
		this.nome = nome;
		this.amb1 = amb1;
		this.posX = posX;
		this.posY = posY;
	}

	public String getNome() 
	{
		return nome;
	}

	public void setNome(String nome) 
	{
		this.nome = nome;
	}

	public Ambiente getAmb1() {
		return amb1;
	}

	public void setAmb1(Ambiente amb1) 
	{
		this.amb1 = amb1;
	}

	public int getPosX() 
	{
		return posX;
	}

	public void setPosX(int posX) 
	{
		this.posX = posX;
	}

	public int getPosY() 
	{
		return posY;
	}

	public void setPosY(int posY) 
	{
		this.posY = posY;
	}
	
	// Métodos criados manualmente:
	
	public void deslocar(int deslocX, int deslocY)
	{
		this.posX = this.posX + deslocX;
		this.posY = this.posY + deslocY;
		
	}
	
	

}
